  <h1>Burgers</h1>
  {{#each burgers}}
  	<div>
      {{this.id}}. {{this.burger_name}}
      {{#if devoured}}
      <br>Devoured
      {{else}}
      <br><button class="eat">Devour</button>
      {{/if}}
  	</div>
    <br>
  {{/each}}


<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <button type="submit">Add burger</button>
</form>